<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item"
        android:padding="10dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:background="@drawable/bg_image" />

        <TextView
            android:id="@+id/item_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_image"
            android:fontFamily="@font/poppins_semibold"
            android:text="Judul Film"
            android:textColor="#FF4D00"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_judul"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_image"
            android:fontFamily="@font/poppins"
            android:text="Tanggal Release"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_release"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_image"
            android:fontFamily="@font/poppins"
            android:text="Language"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_language"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/item_image"
            android:fontFamily="@font/poppins_semibold"
            android:text="Rating"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>